@model WorldWideBasketball.Models.LogingInfo
@{
    ViewBag.Title = "Register page";
}
<main class="form-signin center_div">
    <div class="login_properties_container col-md-4 col-md-offset-4">
        <form class="login-form centered-row " action="RegisterUser" method="post">
            <h1 class="h3 mb-3 fw-normal">Sign in to your account</h1>

            @if (Model.getStatus() == -1 || Model.getStatus() == 7)
            {
                if (Model.getStatus() == -1)
                {
                    <div class="form-floating">
                        <label for="floatingInput" class="form-label">Email address</label>
                        <input type="email" name="Email" class="form-control is-invalid" id="floatingInput" placeholder="name@example.com">
                        <div id="validationServerEmailFeedback" class="invalid-feedback">
                            Invalid Email Address.
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-floating">
                        <label for="floatingInput" class="form-label">Email address</label>
                        <input type="email" name="Email" class="form-control is-invalid" id="floatingInput" placeholder="name@example.com">
                        <div id="validationServerEmailFeedback" class="invalid-feedback">
                            Email Address already in use.
                        </div>
                    </div>
                }
            }
            else
            {

                <div class="form-floating">
                    <label for="floatingInput" class="form-label">Email address</label>
                    <input type="email" name="Email" class="form-control" id="floatingInput" placeholder="name@example.com">

                </div>
            }
            <div class="form-floating">
                <label for="floatingPassword" class="form-label">Password</label>
                <input type="password" name="Password" class="form-control" id="floatingPassword" placeholder="Password">

            </div>
            @if (Model.getStatus() == 2)
            {
                <div class="form-floating">
                    <label for="floatingPassword" class="form-label">Repeat Password</label>
                    <input type="password" name="ConfirmPassword" class="form-control is-invalid" id="floatingPassword" placeholder="Repeat Password">
                    <div id="validationServerUsernameFeedback" class="invalid-feedback">
                        Passwords does not match.
                    </div>
                </div>
                Model.setStatus(0);
            }
            else
            {
                <div class="form-floating">
                    <label for="floatingPassword" class="form-label">Repeat Password</label>
                    <input type="password" name="ConfirmPassword" class="form-control" id="floatingPassword" placeholder="Repeat Password">
                </div>
            }



            <div class="form-floating">
                <label for="floatingInput" class="form-label">Name</label>
                <input type="text" name="Name" class="form-control" id="floatingInput" placeholder="Name">

            </div>
            @if (Model.getStatus() == 8)
            {


        <div class="form-floating">
            <label for="floatingInput">Birth Date</label>
            <input type="date" name="Data" class="form-control is-invalid" id="floatingInput" placeholder="date">
            <div id="validationServerDataFeedback" class="invalid-feedback">
                Data inválida.
            </div>
        </div>
                Model.setStatus(0);
            }
            else
            {
                <div class="form-floating">
                    <label for="floatingInput">Birth Date</label>
                    <input type="date" name="Data" class="form-control" id="floatingInput" placeholder="date">
                </div>
            }

            <button class="w-100 btn btn-lg btn-primary mt-4" type="submit">Sign up</button>

        </form>
    </div>

    @*<div class="login-img">
            <img src="imgs/BolaDeBasket.png" alt="Responsive image">
        </div>*@
</main>

